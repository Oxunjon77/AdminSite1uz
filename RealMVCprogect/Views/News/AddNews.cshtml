@model EntityLayer.Concreat.News
@{
    ViewData["Title"] = "AddNews";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0,0,0,0.6);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1050;
    }

    .modal-content-custom {
        width: 90%;
        max-width: 1000px;
        max-height: 90vh;
        background-color: #fff;
        border-radius: 12px;
        padding: 20px;
        display: flex;
        flex-direction: column;
        box-shadow: 0 10px 40px rgba(0,0,0,0.3);
    }

    .editor-container {
        flex-grow: 1;
        overflow: auto;
        max-height: 60vh;
        margin-top: 15px;
    }

    .modal-footer-btns {
        margin-top: 15px;
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

    .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0,0,0,0.6);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1050;
    }

    .modal-dialog {
        width: 90%;
        max-width: 1000px;
        background-color: #fff;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.3);
    }

    .modal-content-custom {
        display: flex;
        flex-direction: column;
    }

    .modal-title {
        font-weight: bold;
        text-align: center;
    }
</style>
<script src="~/js/news.js"></script>

<div class="card card-solid text-center">
    <div class="card-body pb-0">
        <button type="button"
                class="btn btn-primary position-absolute"
                style="top:10px; right:10px; z-index:1000; border-radius:20px"
                onclick="saveUzbekAndClear()">
             Кейинги (русча версия)
        </button>
        <div class="row d-flex align-items-stretch justify-content-center">
            <div class="col-12 col-sm-8 col-md-6 d-flex align-items-stretch">
                <div class="card bg-light w-100 shadow-sm">
                    <div class="card-header text-muted border-bottom-0">
                        <h4 class="m-0">Янгилик қўшиш</h4>
                    </div>
                    <form asp-action="AddNews" asp-controller="News" method="post" enctype="multipart/form-data" onsubmit="return validateForm()"id="newsForm">
                        <div class="card-body pt-3 d-flex flex-column justify-content-center align-items-center position-relative" style="height: 250px; border: 3px dashed #ccc;">
                            <img id="image-preview" src="" alt="Rasm" class="resizable" style="max-width: 100%; max-height: 150px; display: none;">
                            <img id="image-previewRu" src="" alt="RasmRu" class="resizable" style="max-width: 100%; max-height: 150px; display: none;">
                        </div>


                        <div class="card-footer">
                            <div class="form-group">
                                <label for="short-news">Янгилик мазмуни (қисқача)</label>
                                <textarea id="short-news" name="title" class="form-control" style="border-radius:15px" rows="2"></textarea>
                            </div>
                            <!-- Title display none-->
                            <div class="form-group" style="display:none">
                                <label for="short-newsRu">Янгилик мазмуни (қисқача)</label>
                                <textarea id="short-newsRu" name="titleRu" class="form-control" style="border-radius:15px" rows="2"></textarea>
                            </div>
                            <!-- Asl textarea -->
                            <div class="form-group mt-2">
                                <label for="detailed-news">Батафсил янгилик</label>
                                <textarea id="detailed-news" name="content" class="form-control" style="border-radius:15px" rows="6" readonly onclick="openContentModal()"></textarea>
                            </div>
                            <!-- Asl textarea None -->
                            <div class="form-group mt-2" id="TextareaDetailed_news" style="display:none">
                                <label for="detailed-newsRu">Батафсил янгилик</label>
                                <textarea id="detailed-newsRU" name="contentRu" class="form-control" style="border-radius:15px" rows="6" readonly onclick="openContentModalRu()"></textarea>
                            </div>
                            <!-- Modal oynasi -->
                            <div id="contentModal" class="modal" style="display:none;">
                                <div class="modal-content-custom">
                                    <h5>Батафсил янгилик киритинг</h5>

                                    <!-- CKEditor joylashgan scroll bo‘lgan qism -->
                                    <div class="editor-container">
                                        <textarea id="modal-content-text" class="form-control"></textarea>
                                    </div>

                                    <!-- Tugmalar pastda doim ko‘rinadigan qilib -->
                                    <div class="modal-footer-btns">
                                        <button class="btn btn-secondary me-2" type="button" onclick="closeContentModal()">Бекор қилиш</button>
                                        <button class="btn btn-primary" type = "button" onclick="saveContent()">Сақлаш</button>
                                    </div>
                                </div>
                            </div>

                            <!-- Modal oynasi None-->
                            <div id="contentModalRu" class="modal" style="display:none;">
                                <div class="modal-content-custom">
                                    <h5>Батафсил янгилик киритинг</h5>

                                    <!-- CKEditor joylashgan scroll bo‘lgan qism -->
                                    <div class="editor-container">
                                        <textarea id="modal-content-textRu" class="form-control"></textarea>
                                    </div>

                                    <!-- Tugmalar pastda doim ko‘rinadigan qilib -->
                                    <div class="modal-footer-btns">
                                        <button class="btn btn-secondary me-2" type="button" onclick="closeContentModalRu()">Бекор қилиш</button>
                                        <button class="btn btn-primary"type="button" onclick="saveContentRu()">Сақлаш</button>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="card-footer d-flex justify-content-center align-items-center">
                            <label id="uz" class="btn btn-primary m-1" style="border-radius:15px" for="image">Расм Танлаш</label>
                            <label id="ru" class="btn btn-primary m-1" style="border-radius:15px; display:none" for="imageRu">Выбрать изображение (Ru)</label>
                            <input type="file" id="image" name="files" accept="image/*" class="d-none" onchange="previewImage(event,'image-preview')">
                            <input type="file" id="imageRu" name="filesRu" accept="image/*" class="d-none" onchange="previewImage(event,'image-previewRu')">
                        </div>
                        <input type="hidden" id="Status" name="Status" value="">
                        <button type="submit" class="btn btn-primary btn-block mt-3">Сақлаш</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>   
<script src="~/lib/ckeditor5/ckeditor5.js"></script>
<link href="~/css/ckeditor5/ckeditor5.css" rel="stylesheet" />
<script>
        let ruSelected = false;  // Глобал флаг
        let editorInstance;
        let editorInstanceRu;


    function openContentModal() {
        document.getElementById("contentModal").style.display = "flex";

        if (!editorInstance) {
            ClassicEditor
                .create(document.querySelector('#modal-content-text'), {
                    ckfinder: { uploadUrl: '/News/UploadImage' },
                    toolbar: [
                        'heading', '|', 'bold', 'italic', 'underline', 'link', 'bulletedList', 'numberedList', '|',
                        'insertTable', 'blockQuote', 'imageUpload', 'mediaEmbed', '|',
                        'undo', 'redo', '|',
                        'imageStyle:alignLeft', 'imageStyle:alignCenter', 'imageStyle:alignRight',
                        'imageResize', 'linkImage'
                    ],
                    image: {
                        toolbar: [
                            'imageStyle:alignLeft', 'imageStyle:alignCenter', 'imageStyle:alignRight', '|',
                            'imageResize', 'imageTextAlternative', 'linkImage'
                        ],
                        resizeUnit: '%'
                    },
                    link: {
                        decorators: {
                            addTargetToExternalLinks: true,
                            defaultProtocol: 'https://'
                        }
                    }
                })
                .then(editor => {
                    editorInstance = editor;
                })
                .catch(error => console.error(error));
        }
    }

    function closeContentModal() {
        document.getElementById("contentModal").style.display = "none";
    }

    function saveContent() {
        const newValue = editorInstance.getData();
        document.getElementById("detailed-news").value = newValue;
        closeContentModal();
    }

    function saveUzbekAndClear(){
        ruSelected = true;
        // Uzbekcha qiymatlarni vaqtincha saqlab qo'yish
        const uzTitle = document.getElementById('short-news').value;
        const uzContent = document.getElementById('detailed-news').value;

        // Ruscha inputlar qiymatini tozalash
        document.getElementById('short-newsRu').value = "";
        document.getElementById('detailed-newsRU').value = "";

         // Uzbekcha polyalarni yashirish
        document.getElementById('short-news').parentElement.style.display = "none";
        document.getElementById('detailed-news').parentElement.style.display = "none";
        document.getElementById('uz').style.display = "none";
         document.getElementById('image-preview').style.display = "none";   // Uzbekcha previewni yashir

        // Ruscha polyalarni ko'rsatish
        document.getElementById('short-newsRu').parentElement.style.display = "block";
        document.getElementById('TextareaDetailed_news').style.display = "block";
        document.getElementById('ru').style.display = "block";
        

    }

    function openContentModalRu() {
        document.getElementById("contentModalRu").style.display = "flex";

        if (!editorInstanceRu) {
            ClassicEditor
                .create(document.querySelector('#modal-content-textRu'), {
                    ckfinder: { uploadUrl: '/News/UploadImage' },
                    toolbar: [
                        'heading', '|', 'bold', 'italic', 'underline', 'link', 'bulletedList', 'numberedList', '|',
                        'insertTable', 'blockQuote', 'imageUpload', 'mediaEmbed', '|',
                        'undo', 'redo', '|',
                        'imageStyle:alignLeft', 'imageStyle:alignCenter', 'imageStyle:alignRight',
                        'imageResize', 'linkImage'
                    ],
                    image: {
                        toolbar: [
                            'imageStyle:alignLeft', 'imageStyle:alignCenter', 'imageStyle:alignRight', '|',
                            'imageResize', 'imageTextAlternative', 'linkImage'
                        ],
                        resizeUnit: '%'
                    },
                    link: {
                        decorators: {
                            addTargetToExternalLinks: true,
                            defaultProtocol: 'https://'
                        }
                    }
                })
                .then(editor => {
                    editorInstanceRu = editor;
                })
                .catch(error => console.error(error));
        }
    }

    function closeContentModalRu() {
        document.getElementById("contentModalRu").style.display = "none";
    }

    function saveContentRu() {
        const newValue = editorInstanceRu.getData();
        document.getElementById("detailed-newsRU").value = newValue;
        closeContentModalRu();
    }


</script>